{
  "manifest_version": 3,
  "name": "Canvas LMS Assistant",
  "version": "0.1.0",
  "description": "AI-powered chat interface for Canvas LMS that helps with coursework, grades, and assignments",

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "*://*.instructure.com/*",
    "*://canvas.*/*",
    "*://*.canvas.*/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*",
        "*://canvas.*/*",
        "*://*.canvas.*/*"
      ],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Canvas Assistant"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
