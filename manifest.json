{
  "manifest_version": 3,
  "name": "Canvas LMS Assistant",
  "version": "0.1.0",
  "description": "AI-powered chat interface for Canvas LMS that helps with coursework, grades, and assignments",

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "alarms"
  ],

  "host_permissions": [
    "*://*.instructure.com/*",
    "*://*.canvas.com/*",
    "*://*.canvas.edu/*",
    "*://*.canvas.net/*",
    "*://*.canvas.org/*",
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/worker.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*",
        "*://*.canvas.com/*",
        "*://*.canvas.edu/*",
        "*://*.canvas.net/*",
        "*://*.canvas.org/*",
        "<all_urls>"
      ],
      "js": ["content/content-script.js", "content/data-extractor.js", "content/data-processor.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Canvas Assistant"
  }
}
